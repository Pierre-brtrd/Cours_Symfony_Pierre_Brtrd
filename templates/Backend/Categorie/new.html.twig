{% extends 'base.html.twig' %}

{% block title %}
	Nouvelle Categorie |
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="card p-3 w-50 mx-auto">
			<h1 class="text-center">Ajouter une categorie</h1>
			{% include 'Backend/categorie/_form.html.twig' with { button_label: 'Créer' } %}
		</div>
		<a href="{{ path('app_categorie_index') }}" class="btn btn-secondary back-btn">Retour à la liste</a>
	</section>
{% endblock %}
