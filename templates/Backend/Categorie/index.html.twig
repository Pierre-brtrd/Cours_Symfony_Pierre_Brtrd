{% extends 'base.html.twig' %}

{% block title %}
	Admin Categorie |
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center">Admin catégorie</h1>
		<div class="d-flex flex-wrap justify-content-between gap-2 mt-4">
			{% for categorie in categories %}
				<div class="blog-card mt-0">
					<div class="blog-card-content">
						<div class="row align-items-center">
							<div class="col-md-6">
								<h2>{{ categorie.titre }}</h2>
							</div>
							<div class="col-md-6">
								<div class="form-check form-switch">
									<input type="checkbox" class="form-check-input" value="{{ categorie.id }}" role="switch" data-switch-active-tag {{ categorie.active ? 'checked' }}>
									<label class="form-check-label">Actif</label>
								</div>
							</div>
						</div>
						<div class="d-flex align-items-center mt-2">
							<div class="col-md-6">
								<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary">Modifier</a>
							</div>
							<div class="col-md-6">
								{{ include('Backend/categorie/_delete_form.html.twig') }}
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="btn-add mt-4 text-center">
			<a href="{{ path('app_categorie_new') }}" class="btn btn-primary">Créer une catégorie</a>
		</div>
	</section>


{% endblock %}
