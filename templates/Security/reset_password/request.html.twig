{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<section class="container mt-4">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="card p-3 w-50 mx-auto">
			<h1 class="text-center">Reinitialiser votre mot de passe</h1>

			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div>
				<small>Entrer une adresse email et nous vous enverrons un mail de reinitailisation de mot de passe</small>
			</div>

			<button class="btn btn-primary">Envoyer une reinitialisation</button>
			{{ form_end(requestForm) }}
		</div>
	</section>
{% endblock %}
